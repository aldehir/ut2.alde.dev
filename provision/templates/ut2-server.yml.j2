---
apiVersion: v1
kind: Pod
metadata:
  name: "ut2-server-{{ server_id }}"
spec:
  containers:
    - name: ucc
      image: "{{ ut2004_server_image }}"
      ports:
        - containerPort: 7777
          protocol: UDP
        - containerPort: 7778
          protocol: UDP
        - containerPort: 7787
          protocol: UDP
        - containerPort: 80
  restartPolicy: OnFailure
