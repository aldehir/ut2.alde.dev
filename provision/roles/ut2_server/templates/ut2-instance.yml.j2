---
apiVersion: v1
kind: Pod
metadata:
  name: "{{ ut2_server_instance_name }}"
spec:
  containers:
    - name: server
      image: "{{ ut2_server_image }}"
      ports:
        - containerPort: 7777
          protocol: UDP
        - containerPort: 7778
          protocol: UDP
        - containerPort: 7787
          protocol: UDP
        - containerPort: 80
  restartPolicy: OnFailure
